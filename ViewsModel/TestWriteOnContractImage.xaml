<Window x:Class="Jsa.ViewsModel.TestWriteOnContractImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestWriteOnContractImage" Height="300" Width="300" Style="{StaticResource WindowCommonStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Show" Click="Button_Click_1" Margin="5,10"/>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Border BorderBrush="Blue" BorderThickness="2" Margin="5">
            <Image x:Name="imgContract" Source="{Binding ContractImage}" Stretch="Fill"/>
            </Border>
        </ScrollViewer>
        


    </Grid>
</Window>
